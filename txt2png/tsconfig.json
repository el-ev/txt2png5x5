{
  // Shared TypeScript configuration for the project.
  // This file uses JSONC (comments allowed) and is suitable for Node or browser tooling.
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./public",
    "rootDir": "./src",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "sourceMap": true,
    "declaration": true,
    "incremental": true,
  },

  "include": ["src/**/*",],

  "exclude": ["node_modules", "public"]
}